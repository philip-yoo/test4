<div class="container">
<h1 class="page-header">JSON읽기</h1>
<button id="mybtn" type="button" class="btn btn-primary">학과정보 가져오기로그인</button>

<form id="login-form" class="form-inline">
<input type="text" name="user_id" id="user_id" class="form-control" />
<input type="password" name="user_pw" id="user_pw" class="form-control" />

</form>

<!-- 결과를 출력하기 위한 HTML -->
<div id="result"></div>
</div>

<script type="text/javascript">
$(function(){
	$("#login-form").submit(function(e){
		e.preventDefault();
		//$.post(url, data, success, dataType);
		//--> data는 json형식, 필요 없을 경우 생략 가능
		//--> dataType는 읽어올 형식, 생략시 json으로 지정됨.
		$.post("../api/post.do", {
			user_id:$("#user_id").val(),
			user_pw:$("#user_pw").val()},
			function(req){
				//준비된 요소에게 읽어온 내용을 출력한다.
				$("#result").html(req);},"html");//end $.post
			});//end submit
			
		});// end $.ajax	

</script>
