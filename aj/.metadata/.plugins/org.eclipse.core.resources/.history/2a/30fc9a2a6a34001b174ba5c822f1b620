<script type="text/javascript">
$(function(){
	$("#mybutton").click(function(e){
		//<form>태그가 submit되어 페이지가 이동되는 것을 방지한다.
		e.preventDefault();
		//사용자의 입력값을 가져온다.
		var uid = $("#user_id").val();
		var pwd = $("#user_pw").val();
		$.get("../api/get.do", {num1:100, num2:200}, function(req){
			//준비된 요소에게 읽어온 내용을 출력한다.
			$("#result").append(req);
		}, "html");//end $.ajax		
	});// end click
});
</script>
