<script type="text/javascript">
$(function(){
	$("#mybutton").click(function(e){
		//submit이나 링크의 페이지 이동을 방지한다.
		e.preventDefault();
		
		//$.get(url, data, success, dataType);
		//-->data는 json형식, 필요없을 경우 생략 가능
		//-->dataType는 읽어올 형식, 생략시 json으로 지정됨
		$.get("../api/get.do", {num1:100, num2:200}, function(req){
			//준비된 요소에게 읽어온 내용을 출력한다.
			$("#result").append(req);
		}, "html");//end $.ajax		
	});// end click
});
</script>
